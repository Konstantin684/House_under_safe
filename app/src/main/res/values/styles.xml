<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CircularAvatarStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@drawable/circle_mask</item>
        <item name="android:clipToOutline" tools:targetApi="31">true</item>
    </style>

    <style name="CodeDotStyle">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/dot_circle_empty</item>
    </style>

    <style name="KeypadButton">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/button_double_login_text</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPassportDescription">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_color_description</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="TextViewPassport">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/text_color_all</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Theme.HouseUnderSafe" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

</resources>