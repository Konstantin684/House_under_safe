<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:windowSoftInputMode="adjustResize"
    tools:context=".policy_design.step_1.FirstStepFragment">


    <TextView
        android:id="@+id/title_first_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:gravity="left|center_vertical"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text="Данные о недвижимости"
        android:textColor="@color/text_color_all"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Выберите тип недвижимости"
                android:textColor="@color/text_color_description" />

            <Spinner
                android:id="@+id/spinner_property_type"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/text_color_all"
                android:background="@color/back_edittext"
                android:enabled="true"
                android:clickable="true"
                android:spinnerMode="dropdown" />


            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Регион/город"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:textAllCaps="true"
                android:hint="@string/add_data"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Адрес недвижимости"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/adres_nedvig"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:textAllCaps="true"
                android:hint="@string/add_data"
                android:inputType="text"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Общая площадь недвижимости"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/obchaia_plochad"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:hint="@string/add_data"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Колличество этажей (необязательно)"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/kol_etaj"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:hint="@string/add_data"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Этаж (если применимо)"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/number_etaj"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:hint="@string/add_data"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Год постройки (необязательно)"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/god_postroyki"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:hint="@string/add_data"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="Кадастровый номер (необязательно)"
                android:textColor="@color/text_color_description" />

            <EditText
                android:id="@+id/kadastroviy_nomer"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/edittext_background_selector"
                android:enabled="true"
                android:hint="@string/add_data"
                android:inputType="number"
                android:padding="5dp"
                android:textColor="@color/text_color_all" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="25dp">

                <View
                    android:id="@+id/view5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_rounded_blue"
                    android:maxWidth="130dp"
                    android:maxHeight="55dp"
                    android:minWidth="120dp"
                    android:minHeight="50dp"
                    android:src="@drawable/arrow_forward_white" />

            </TableRow>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>