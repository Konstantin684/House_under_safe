<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".design_theme.DesignThemeActivity">

    <!-- Toolbar -->
    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar_design_theme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/theme_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton_ligth_theme"
            style="@style/ThemeRadioButtonCustom"
            android:drawableTop="@drawable/ic_light_theme"
            android:text="Светлая тема" />

        <RadioButton
            android:id="@+id/radioButton_dark_theme"
            style="@style/ThemeRadioButtonCustom"
            android:drawableTop="@drawable/ic_dark_theme"
            android:text="Тёмная тема" />

        <RadioButton
            android:id="@+id/radioButton_system_theme"
            style="@style/ThemeRadioButtonCustom"
            android:drawableTop="@drawable/ic_system_theme"
            android:text="Как в системе" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>
