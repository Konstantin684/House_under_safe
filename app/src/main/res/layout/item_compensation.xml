<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="3dp"
    card_view:cardBackgroundColor="@color/card_color"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/card_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="ПОЛИС №"
                android:textColor="@color/text_color_all"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/number_polise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="1234567890"
                android:textColor="@color/text_color_all"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/text_color_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="170dp"
                android:layout_height="160dp"
                android:background="@drawable/frame_border">

                <ImageView
                    android:id="@+id/imageView_plan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    card_view:srcCompat="@drawable/image_plan" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    style="@style/TextViewPassportDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="регион расположения недвижимости:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/region_polise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ONLY TEXT"
                    android:textColor="@color/text_color_all" />

                <TextView
                    android:id="@+id/textView26"
                    style="@style/TextViewPassportDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Тип недвижимости:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/type_real_estate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ONLY TEXT"
                    android:textColor="@color/text_color_all" />

                <TextView
                    android:id="@+id/textView28"
                    style="@style/TextViewPassportDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Адрес недвижимости:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/adres_real_estate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ONLY TEXT"
                    android:textColor="@color/text_color_all" />

                <TextView
                    android:id="@+id/textView30"
                    style="@style/TextViewPassportDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Действителен:"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/validaty_period"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ONLY TEXT"
                    android:textColor="@color/text_color_all" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/text_color_description" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Страховые риски:"
            android:textColor="@color/text_color_description" />

        <LinearLayout
            android:id="@+id/risksContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/text_color_description" />

        <Button
            android:id="@+id/button_oform_strah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroud_selector_button"
            android:text="@string/oform_strah"
            android:textColor="@color/text_color_button"
            app:cornerRadius="5dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
