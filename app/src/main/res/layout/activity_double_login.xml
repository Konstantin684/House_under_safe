<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    tools:context=".double_login.DoubleLoginActivity">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/keypad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/avatarImage"
            style="@style/CircularAvatarStyle"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />
        <!-- Приветствие -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:hint="Здравствуйте, ИВАН!"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/avatarImage" />
        <!-- Введите код -->
        <TextView
            android:id="@+id/enterCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="Введите код"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcomeText" />
        <!-- Имитаторы кружков кода -->
        <LinearLayout
            android:id="@+id/codeDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/enterCodeText">
            <!-- 4 кружочка -->
            <View style="@style/CodeDotStyle" />
            <View style="@style/CodeDotStyle" />
            <View style="@style/CodeDotStyle" />
            <View style="@style/CodeDotStyle" />
        </LinearLayout>
    </LinearLayout>
    <!-- Цифровая клавиатура -->
    <GridLayout
        android:id="@+id/keypad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <!-- Кнопки 1-9 -->
        <Button
            style="@style/KeypadButton"
            android:text="1" />
        <Button
            style="@style/KeypadButton"
            android:text="2" />
        <Button
            style="@style/KeypadButton"
            android:text="3" />
        <Button
            style="@style/KeypadButton"
            android:text="4" />
        <Button
            style="@style/KeypadButton"
            android:text="5" />
        <Button
            style="@style/KeypadButton"
            android:text="6" />
        <Button
            style="@style/KeypadButton"
            android:text="7" />
        <Button
            style="@style/KeypadButton"
            android:text="8" />
        <Button
            style="@style/KeypadButton"
            android:text="9" />
        <!-- Кнопка "Выйти" -->
        <Button
            style="@style/KeypadButton"
            android:text="Выйти"
            android:textSize="14sp" />
        <!-- Кнопка 0 -->
        <Button
            style="@style/KeypadButton"
            android:text="0" />
        <!-- Отпечаток -->
        <ImageButton
            style="@style/KeypadButton"
            android:background="@null"
            android:scaleType="centerInside"
            android:src="@drawable/keypad_button_border" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>