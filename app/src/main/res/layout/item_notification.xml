<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/card_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/transactionType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Платежи"
            android:textColor="@color/text_color_description"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/transactionDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.11.2024 в 17:55"
            android:textSize="12sp"
            android:textColor="@color/text_color_description"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/text_color_all"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_color_description"
        android:paddingTop="2dp"
        android:paddingBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dot_color_empty"/>
</LinearLayout>
