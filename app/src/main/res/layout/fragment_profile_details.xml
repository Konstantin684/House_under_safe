<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.profile_details.ProfileDetailsFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/custom_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/avatarImage"
            style="@style/CircularAvatarStyle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_incognito" />

        <TextView
            android:id="@+id/btn_change_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:text="Изменить фото"
            android:textColor="@color/button_double_login_text"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@color/card_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="@string/email"
                        android:textColor="@color/text_color_description" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/back_edittext"
                        android:editable="false"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="Введите Email example@examp.ru"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textColor="@color/text_color_all" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/card_color"
                    android:padding="1dp"
                    android:src="@drawable/ruchka" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp"
                android:background="@color/card_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="@string/num_phone"
                        android:textColor="@color/text_color_description" />

                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@color/back_edittext"
                        android:ems="10"
                        android:enabled="true"
                        android:hint="Введите номер телефона"
                        android:inputType="phone"
                        android:padding="5dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:text=""
                        android:textColor="@color/text_color_all" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/card_color"
                    android:padding="1dp"
                    android:src="@drawable/ruchka" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:cardBackgroundColor="@color/card_color">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:text="Паспортные данные"
                    android:textColor="@color/text_color_all"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/text_color_description" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/photo_pasporta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:baselineAligned="true"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/add_pasport" />

                            <TextView
                                android:id="@+id/textView30"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Прикрепить \nскан паспорта" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/opisanie_dly_pasporta"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:text="Чтобы подтвердить ваш
                        \nаккаунт и обеспечить безопасность
                        \nваших данных, пожалуйста,
                        \nприкрепите скан-копию вашего
                        \nпаспорта.Это необходимо для
                        \nверификации личности и повышения
                        \nуровня защиты вашего профиля."
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/dannie_pasporta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView12"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Паспорт выдан" />

                        <TextView
                            android:id="@+id/pasport_vydan"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView14"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Дата выдачи" />

                        <TextView
                            android:id="@+id/data_vydachi"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView16"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Код подразделения" />

                        <TextView
                            android:id="@+id/kod_podrazdeleniya"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView18"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Серия и номер" />

                        <TextView
                            android:id="@+id/seria_i_nomer"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView20"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Фамилия" />

                        <TextView
                            android:id="@+id/familia"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView22"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Имя" />

                        <TextView
                            android:id="@+id/imy"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView24"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Отчество" />

                        <TextView
                            android:id="@+id/otchestvo"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView26"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Дата рождения" />

                        <TextView
                            android:id="@+id/data_rogdenia"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />

                        <TextView
                            android:id="@+id/textView28"
                            style="@style/TextViewPassportDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Место рождения" />

                        <TextView
                            android:id="@+id/mesto_rogdenia"
                            style="@style/TextViewPassport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
